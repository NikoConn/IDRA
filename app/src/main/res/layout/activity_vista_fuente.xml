<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Interface.VistaFuente.VistaFuente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/idra_mark" />

            <TextView
                android:id="@+id/tituloFuente"
                style="@style/DefaultFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"
                android:textSize="20sp" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imageFuente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic[10]" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/metersTextView"
                    style="@style/DefaultFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/mVistaFuenteTextView"
                    style="@style/DefaultFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="m" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    style="@style/DefaultFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/created_by" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/createdByTextView"
                    style="@style/DefaultFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutStars"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/star1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/empty_star"
                android:backgroundTint="?attr/actionMenuTextColor"
                android:scaleType="centerInside" />

            <Button
                android:id="@+id/star2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/empty_star"
                android:backgroundTint="?attr/actionMenuTextColor"
                android:scaleType="centerInside" />

            <Button
                android:id="@+id/star3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/empty_star"
                android:backgroundTint="?attr/actionMenuTextColor"
                android:scaleType="centerInside" />

            <Button
                android:id="@+id/star4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/empty_star"
                android:backgroundTint="?attr/actionMenuTextColor"
                android:scaleType="centerInside" />

            <Button
                android:id="@+id/star5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/empty_star"
                android:backgroundTint="?attr/actionMenuTextColor"
                android:scaleType="centerInside" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-35dp"
                android:backgroundTint="?attr/actionMenuTextColor"
                android:onClick="share"
                app:srcCompat="?attr/actionModeShareDrawable" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/descripcionTextView"
                    style="@style/DefaultFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_description"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reportIncidentButton"
                style="@style/DefaultFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_round"
                android:backgroundTint="@color/boxColor"
                android:onClick="reportarIncidenciaClick"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/report"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/denyPetitionButton"
                style="@style/DefaultFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:backgroundTint="@android:color/holo_red_light"
                android:onClick="denyPetition"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/DenyRequest"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/acceptPetitionButton"
                style="@style/DefaultFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:backgroundTint="@android:color/holo_green_light"
                android:onClick="acceptPetition"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/AcceptRequest"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <fragment
            android:id="@+id/mapFuente"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp" />

    </LinearLayout>
</ScrollView>